@{
    ViewData["Title"] = "DangNhap";
    Layout = null;
    var khachHang = ViewBag.Khachhang as KhachHang;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://kit.fontawesome.com/e9c77e8100.js" crossorigin="anonymous"></script>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
<div class="container" style="padding-top: 100px !important; width:50%;">
    <h3>Đăng nhập</h3>
        <form method="post" asp-action="DangNhap" asp-controller="KhachHang" class="was-validated">
            <!-- Thông báo lỗi tổng quát -->
           

            <!-- Email -->
            <div class="form-group">
                <label asp-for="@khachHang.Email" class="control-label">Email</label>
                <input asp-for="@khachHang.Email" type="email" name="email" class="form-control" required />
                <div class="invalid-feedback text-danger">Please fill out this field.</div>
                <span asp-validation-for="@khachHang.Email" class="text-danger"></span>
            </div>

            <!-- Password -->
            <div class="form-group">
                <label asp-for="@khachHang.Password" class="control-label">Password</label>
                <input asp-for="@khachHang.Password" type="password" name="password" class="form-control" required />
                <div class="invalid-feedback text-danger">Please fill out this field.</div>
                <span asp-validation-for="@khachHang.Password" class="text-danger"></span>
            </div>

            <div asp-validation-summary="All" class="text-danger mb-3"></div>
            <!-- Nút Đăng nhập -->
            <button type="submit" class="btn btn-block mt-4 fw-bold" style="width: 100%;background-color: #6995B1; color: white;">
                Đăng nhập
            </button>

            <!-- Liên kết Đăng ký -->
            <div class="text-center mt-3">
                <p>Bạn chưa có tài khoản? <a asp-action="DangKy" data-mdb-toggle="pill" data-mdb-target="#pills-register">Đăng ký</a></p>
            </div>
        </form>

</div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
</body>
</html>