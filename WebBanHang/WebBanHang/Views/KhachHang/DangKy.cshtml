@{
    ViewData["Title"] = "DangKy";
    Layout = null;
    var khachHang = ViewBag.Khachhang as KhachHang;
    var confirmPassword = ViewBag.ConfirmPassword as string;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://kit.fontawesome.com/e9c77e8100.js" crossorigin="anonymous"></script>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <div class="container" style="padding-top: 100px !important;">
        <h1 class="text-center">Customer Registration</h1>
        <div class="row d-flex justify-content-center align-items-center">
            <div class="col-md-6">
                <form asp-action="DangKy" asp-controller="KhachHang" method="post" class="was-validated">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <!-- Họ tên -->
                    <div class="form-group">
                        <label asp-for="@khachHang.HoTen" class="control-label">Họ tên</label>
                        <input asp-for="@khachHang.HoTen" name="hoTen" class="form-control" required />
                        <div class="invalid-feedback text-danger">Please fill out this field.</div>
                        <span asp-validation-for="@khachHang.HoTen" class="text-danger"></span>
                        <span class="text-danger">@Html.ValidationMessage("HoTen", new { @class = "text-danger" })</span>
                    </div>

                    <!-- Mật khẩu -->
                    <div class="form-group">
                        <label asp-for="@khachHang.Password" class="control-label">Mật khẩu</label>
                        <input asp-for="@khachHang.Password" name="password" type="password" class="form-control" required />
                        <div class="invalid-feedback text-danger">Please fill out this field.</div>
                        <span asp-validation-for="@khachHang.Password" class="text-danger"></span>
                        <span class="text-danger">@Html.ValidationMessage("Password", new { @class = "text-danger" })</span>
                    </div>

                    <!-- Nhập lại mật khẩu -->
                    <div class="form-group">
                        <label class="control-label">Nhập lại mật khẩu</label>
                        <input asp-for="@confirmPassword" type="password" name="ConfirmPassword" id="confirmPassword" class="form-control" required />
                        <div class="invalid-feedback text-danger">Please fill out this field.</div>
                        <span asp-validation-for="@confirmPassword" class="text-danger"></span>
                        <span class="text-danger">@Html.ValidationMessage("ConfirmPassword", new { @class = "text-danger" })</span>
                    </div>

                    <!-- Giới tính -->
                    <div class="form-group">
                        <label asp-for="@khachHang.GioiTinh" class="control-label">Giới tính</label>
                        <select asp-for="@khachHang.GioiTinh" name="gioiTinh" class="form-control" required>
                            <option value="">Select Gender</option>
                            <option value="Nam">Male</option>
                            <option value="Nữ">Female</option>
                            <option value="Khác">Other</option>
                        </select>
                        <div class="invalid-feedback text-danger">Please fill out this field.</div>
                        <span asp-validation-for="@khachHang.GioiTinh" class="text-danger"></span>
                        <span class="text-danger">@Html.ValidationMessage("GioiTinh", new { @class = "text-danger" })</span>
                    </div>

                    <!-- Ngày sinh -->
                    <div class="form-group">
                        <label asp-for="@khachHang.NgaySinh" class="control-label">Ngày sinh</label>
                        <input asp-for="@khachHang.NgaySinh" name="ngaySinh" type="date" class="form-control" required />
                        <div class="invalid-feedback text-danger">Please select your date of birth.</div>
                        <span asp-validation-for="@khachHang.NgaySinh" class="text-danger"></span>
                        <span class="text-danger">@Html.ValidationMessage("NgaySinh", new { @class = "text-danger" })</span>
                    </div>

                    <!-- Email -->
                    <div class="form-group">
                        <label asp-for="@khachHang.Email" class="control-label">Email</label>
                        <input asp-for="@khachHang.Email" name="email" type="email" class="form-control" required />
                        <div class="invalid-feedback text-danger">Please fill out this field.</div>
                        <span asp-validation-for="@khachHang.Email" class="text-danger"></span>
                        <span class="text-danger">@Html.ValidationMessage("Email", new { @class = "text-danger" })</span>
                    </div>

                    <!-- Số điện thoại -->
                    <div class="form-group">
                        <label asp-for="@khachHang.Sdt" class="control-label">Số điện thoại</label>
                        <input asp-for="@khachHang.Sdt" name="sdt" class="form-control" required />
                        <div class="invalid-feedback text-danger">Please fill out this field.</div>
                        <span asp-validation-for="@khachHang.Sdt" class="text-danger"></span>
                        <span class="text-danger">@Html.ValidationMessage("Sdt", new { @class = "text-danger" })</span>
                    </div>

                    <!-- Địa chỉ -->
                    <div class="form-group">
                        <label asp-for="@khachHang.DiaChi" class="control-label">Địa chỉ</label>
                        <input asp-for="@khachHang.DiaChi" name="diaChi" class="form-control" required />
                        <div class="invalid-feedback text-danger">Please fill out this field.</div>
                        <span asp-validation-for="@khachHang.DiaChi" class="text-danger"></span>
                        <span class="text-danger">@Html.ValidationMessage("DiaChi", new { @class = "text-danger" })</span>
                    </div>

                    <!-- Nút đăng ký -->
                    <div class="form-group" style="margin-top:25px;">
                        <button type="submit" class="btn btn-block mt-4 fw-bold" style="width: 100%;background-color: #6995B1; color: white;">Đăng ký</button>
                    </div>

                    <!-- Liên kết đăng nhập -->
                    <div class="text-center">
                        <p>Bạn đã có tài khoản? <a asp-action="DangNhap">Đăng nhập</a></p>
                    </div>
                </form>

            </div>
        </div>
    </div>


    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script> 
</body>
</html>
